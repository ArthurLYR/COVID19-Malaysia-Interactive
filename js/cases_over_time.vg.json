{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Country Cases over Time",
    "width": 800,
    "height": 400,
    "layer": [
        {
            "data": {
                "url": "../data/cases_deaths_malaysia.csv"
            },
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "date",
                    "timeUnit": "year",
                    "title": "Date"
                },
                "y": {
                    "field": "count",
                    "aggregate": "sum",
                    "title": "Count",
                    "scale": {
                        "domain": [0, 1200000]
                    }
                },
                "color": {
                    "field": "case_type",
                    "type": "nominal",
                    "title": "Case Type"
                },
                "tooltip": [
                    {
                        "field": "date",
                        "timeUnit": "year",
                        "title": "Date"
                    },
                    {
                        "field": "count",
                        "aggregate": "sum",
                        "title": "Count"
                    },
                    {
                        "field": "case_type",
                        "type": "nominal",
                        "title": "Case Type"
                    }
                ]
            }
        }
    ]
}